{% extends "auxiliars/baseDins.html.twig" %}

{% block head %}
    <title> Borsa de treball: {{ actor.nom }} {{ actor.llinatges }}</title>
    <script>
        $(function () {
            $("#dAlumne").click(function () {
                location.href="modificarDades"
            });
            $("#dEstudis").click(function () {
                location.href="estudis"
            });
            // $("#dIdiomes").click(function () {
            //     $("#mIdiomes")[0].click();
            // });
            // $("#dEstats").click(function () {
            //     $("#mEstats")[0].click();
            // });
            $('#dOfertes > .click').on('click', function (event) {
                var id = event.currentTarget.id;
                window.location.href = "ofertes#" + id;
            });
            $(".click a").on('click', function (event) {
                event.stopPropagation();
            });
        });
    </script>
{% endblock %}

{% block contingut %}
    <div class="row">
        <div class="col-md-4">
            <h3>Les teves dades</h3>
            <div class="well click" id="dAlumne">
                <p><label>Nom:&nbsp;</label>{{ actor.nom }}</p>
                <p><label>Llinatges:&nbsp;</label>{{ actor.llinatges }}</p>
                <p><label>Telefon:&nbsp;</label>{{ actor.telefon }}</p>
                <p><label>Correu electrònic:&nbsp;</label>{{ actor.email }}</p>
                <p><label>url:&nbsp;</label><a
                            href="{% if not(actor.url starts with 'http') %}{{ 'http://' }}{% endif %}{{ actor.url }}"
                            target="_blank">{{ actor.url }}</a></p>
                <p>&nbsp;</p>
                <p><label>Adreça:&nbsp;</label>{{ actor.adreca }}</p>
                <p><label>Codi postal:&nbsp;</label>{{ actor.codiPostal }}</p>
                <p><label>Localitat:&nbsp;</label>{{ actor.localitat }}</p>
                <p><label>Província:&nbsp;</label>{{ actor.provincia }}</p>
                <p><label>Actiu: &nbsp;</label><span
                            class="glyphicon {% if actor.actiu %}glyphicon-ok{% else %}glyphicon-remove{% endif %}"></span>
                </p>
            </div>
        </div><!--col-->

        <div class="col-md-4">
            <h3>Estudis acabats</h3>
            {% if actor.estudis is empty %}
                <div class="well"><p> Encara no té cap estudis registrats </p></div>
            {% else %}
                <div class="well click" id="dEstudis">
                    <ul>
                        {% for grau in actor.estudis %}
                            <li><p>{{ grau.nom }}</p></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
